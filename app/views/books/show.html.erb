<div class="container px-5 px-sm-0">
  <div class="row">
    <aside class="col-md-3">
      <%= render "shared/sidebar" %>
    </aside>
    <main class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table table-hover table-inverse">

        <tbody>
            <tr>
              <td>
                <% if @book.user.profile_image.attached? %>
                  <%= image_tag @book.user.profile_image.variant(resize_to_fill: [80, 80]), class: "rounded " %>
                <% else %>
                  <div class="bg-light border rounded " style="width:80px;height:80px;margin:0;">NO IMAGE</div>
                <% end %>
              </td>

              
              <td><%= link_to @book.title, book_path(@book) %></td>
              <td><%= @book.opinion %></td>
              <td><%= link_to "Edit", edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
              <td><%= link_to "Destroy", book_path(@book), method: :delete, class: "btn btn-sm btn-danger" %></td>

              
            </tr>
        </tbody>

      </table>

    </main>
  </div>
</div>
