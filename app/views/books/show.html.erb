<% flash.each do |key, message| %>
  <div style="text-align: left; margin-left: 0;">
    <%= message %>
  </div>
<% end %>


<div class="container px-5 px-sm-0">
  <div class="row">
    <aside class="col-md-3">
      <%= render "shared/sidebar", book: @book %>
    </aside>
    <main class="col-md-8 offset-md-1">
      <h2 class="mt-3">Book detail</h2>
      <table class="table table-hover table-inverse">

        <tbody>
            <tr>
              <td>
                <% if @book.user.profile_image.attached? %>
                  <%= image_tag @book.user.profile_image.variant(resize_to_fill: [80, 80]), class: "rounded " %>
                <% else %>
                  <div class="bg-light border rounded " style="width:80px;height:80px;margin:0;">NO IMAGE</div>
                <% end %>
              </td>

              
              <td><%= link_to @book.title, book_path(@book) %></td>
              <td><%= @book.opinion %></td>

              <% if @book.user == current_user %> 
                <td><%= link_to "Edit", edit_book_path(@book), class: "btn btn-sm btn-success" %></td>
                <td><%= link_to "Destroy", book_path(@book), method: :delete,
                                                             data: {confirm:"本当に消しますか？"},
                                                             class: "btn btn-sm btn-danger" %></td>
              <% end %>
              
            </tr>
        </tbody>

      </table>

    </main>
  </div>
</div>
