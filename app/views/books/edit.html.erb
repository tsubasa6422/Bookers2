<% flash.each do |key, message| %>
  <div style="text-align: left; margin-left: 0;">
    <%= message %>
  </div>
<% end %>


<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto mt-3">
    
      <h1 >Editing Book</h1>

      <%= form_with model: @book, url: book_path(@book), method: :patch, local: true, html: {multipart: true } do |f| %>
        <% if @book.errors.any? %>
          <div class="alert alert-danger">
            <p class="mb-1"><%= pluralize(@book.errors.count, "error") %> prohibited this user from being saved: </p>
             <ul class="mb-0">
              <% @book.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-3">
          <%= f.label :title, "Title",class: "form-label" %>
          <%= f.text_field :title, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :body, "Opinion", class: "form-label" %>
          <%= f.text_area :body, rows: 2, class: "form-control" %>
        </div>

        <%= f.submit "Update Book", class: "btn btn-success mb-3 " %>
      <% end %>

      <%= link_to "Show", book_path(@book) %>|
      <%=link_to "Back", books_path %>


    </div>
  </div>
</div>



