<% flash.each do |key, message| %>
  <div style="text-align: left; margin-left: 0;">
    <%= message %>
  </div>
<% end %>


<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
             
        <h2 class="mt-3">User info</h2>

        
   

      <%= form_with model: @user, url: user_path(@user), method: :patch, local: true, html: {multipart: true } do |f| %>
        
        <% if @user.errors.any? %>
          <div class="w-100">
            <h3><%= pluralize(@user.errors.count, "error") %> prohibited this obj from being saved: </h3>
             <ul class="mb-0">
              <% @user.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-3 mt-3">
          <%= f.label :name, "Name",class: "form-label" %>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :profile_image, "Image", class: "form-label" %>
          <div class="d-flex align-items-center gap-3" >
  
            <%= f.file_field :profile_image %>
          </div>
        </div>

        <div class="mb-3">
          <%= f.label :introduction, "Introduction", class: "form-label" %>
          <%= f.text_area :introduction, rows: 2, class: "form-control" %>
        </div>

        <%= f.submit "Update User", class: "btn btn-secondary mb-3" %>
      <% end %>


    </div>
  </div>
</div>



