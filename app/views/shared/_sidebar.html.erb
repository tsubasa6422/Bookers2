

      <% user ||= current_user %>
        
        <h2 class="mt-3">User info</h2>
        <% if user.profile_image.attached? %>
          <%= image_tag user.profile_image.variant(resize_to_fill: [100, 100]).processed, class: "rounded " %>
        <% else %>
          <%=image_tag "no_image.jpg", width:100, height:100, alt: "" %>
        <% end %>

        <table class="table">
          <tr>
            <th>name</th>
            <th><%= user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= user.try(:introduction) %></th>
          </tr>
        </table>

        <%= link_to '<i class="fa-solid fa-user-gear"></i>'.html_safe,edit_user_path(user), class: "btn btn-outline-secondary w-100 mt-4" %>

        <h2 class="mt-3">New book</h2>
        <%= form_with model: book, url: books_path, local: true do |f| %>
        
          <div class="mb-3">
            <%= f.label :title, class: "form-label" %>
            <%= f.text_field :title, class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= f.label :body, "Opinion", class: "form-label" %>
            <%= f.text_area :body, class: "form-control" %>
          </div>
          <%= f.submit "Create Book", class: "btn btn-success" %>
        <% end %>
      


   