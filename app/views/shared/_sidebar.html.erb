
      <h2 class="mt-3">User info</h2>
      <% if current_user.profile_image.attached? %>
        <%= image_tag url_for(current_user.profile_image.variant(resize_to_fill: [100, 100]).processed), class: "rounded " %>
      <% else %>
        <div class="bg-light border rounded " style="width:100px;height:100px;margin:0;">NO IMAGE</div>
      <% end %>

      <table class="table">
        <tr>
          <th>name</th>
          <th><%= current_user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= current_user.try(:introduction) %></th>
        </tr>
      </table>

      <%= link_to '<i class="fa-solid fa-user-gear"></i>'.html_safe,edit_user_path(current_user), class: "btn btn-outline-secondary btn-block mt-3" %>

      <h2 class="mt-3">New book</h2>
      <%= form_with model: Book.new, url: books_path, local: true do |f| %>
      
        <div class="mb-3">
          <%= f.label :title, class: "form-label" %>
          <%= f.text_field :title, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :opinion, "Opinion", class: "form-label" %>
          <%= f.text_area :opinion, class: "form-control" %>
        </div>
        <%= f.submit "Create Book", class: "btn btn-success w-100" %>
      <% end %>



   